{
  "manifest_version": 3,
  "name": "CrossAI",
  "version": "1.0",

  "permissions": ["tabs", "storage", "scripting"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://claude.ai/*",
        "https://www.claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.gemini.google.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
